{
  "env": {
    "es2021": true,
    "node": true
  },
  "parser": "@babel/eslint-parser",
  "extends": ["prettier", "airbnb-base", "standard", "prettier/standard"],
  "plugins": ["prettier", "jest"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "promise/catch-or-return": "error",
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false
      }
    ]
  }
}
